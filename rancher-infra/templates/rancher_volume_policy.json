{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "RancherVolumeMount",
            "Effect": "Allow",
            "Action": [
                "ec2:AttachVolume",
                "ec2:DetachVolume"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:instance/*",
                "arn:aws:ec2:*:*:volume/*"
            ],
            "Condition": {
                "StringEquals": {
                  "ec2:ResourceTag/Rancher": "True"
                }
            }
        },
        {
            "Sid": "RancherVolumeDescribe",
            "Effect": "Allow",
            "Action": "ec2:DescribeVolumes",
            "Resource": "*"
        }
    ]
}