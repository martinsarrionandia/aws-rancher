{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ExternalDNS",
      "Effect": "Allow",
      "Action": [
        "route53:ListHostedZones",
        "route53:ChangeResourceRecordSets",
        "route53:ListResourceRecordSets"
      ],
      "Resource": [
        "arn:aws:route53:::hostedzone/${hosted_zone_id}",
        "*"
      ]
    },
    {
      "Sid": "DescribeAZs",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeAvailabilityZones"
      ],
      "Resource": "*"
    }
  ]
}
